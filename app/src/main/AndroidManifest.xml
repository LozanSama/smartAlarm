<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.patatos.lozansama.smartalarmclock">

    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.ui_splash.activities.SplashActivity"
            android:theme="@style/AppThemeNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.ui_login.activities.LoginActivity"
            android:theme="@style/AppThemeNoActionBar" />

        <activity
            android:name=".ui.ui_login.activities.RegistrationActivity"
            android:theme="@style/AppThemeNoActionBar" />

        <activity android:name=".ui.ui_alarm_list.activities.AlarmList" />

        <activity android:name=".ui.ui_add_modified_alarm.activities.AddModifiedAlarm" />
    </application>

    <receiver android:name=".util.AlarmReceiver" />
    <service
        android:name=".util.RingtoneService"
        android:enabled="true" />
</manifest>